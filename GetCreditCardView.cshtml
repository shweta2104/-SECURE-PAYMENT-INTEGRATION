<div class="credit-card-view">
    <h4>Credit Card Payment</h4>
    <div class="mb-3">
        <label>Card Number:</label>
        <input type="text" name="card_number" class="form-control" placeholder="Enter card number" />
    </div>
    <div class="mb-3">
        <label>Expiry Date:</label>
        <input type="text" name="expiry_date" class="form-control" placeholder="MM/YY" />
    </div>
    <div class="mb-3">
        <label>CVV:</label>
        <input type="text" name="cvv" class="form-control" placeholder="Enter CVV" />
    </div>
</div>
