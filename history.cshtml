@model List<tblorder>;

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/css/order.css" rel="stylesheet" />
<div class="container my-5">
    <h2 class="text-center mb-4 text-success">Your Order History</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You have not placed any orders yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover shadow-sm order-table">
                <thead class="table-success">
                    <tr>
                        @* <th>Order ID</th> *@
                        <th>Product</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Delivery Address</th>
                        <th>Contact No</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            @* <td>@order.oid</td> *@
                            <td>@order.name</td>
                            <td>₹@order.total_amt</td>
                            <td>@order.p_method</td>
                            <td>
                                <span class="badge @(order.o_status == "Delivered" ? "bg-success" : "bg-warning text-dark")">
                                    @order.o_status
                                </span>
                            </td>
                            <td>@order.o_date.ToString("dd MMM yyyy hh:mm tt")</td>
                            <td style="white-space: normal; word-break: break-word; max-width: 300px;">@order.address</td>
                            <td>@order.contact</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>