<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/css/success.css" rel="stylesheet" />
<div class="success-box">
    <i class="bi bi-check-circle-fill success-icon"></i>

    <div class="success-message">
        @if (TempData["msg"] != null)
        {
            @TempData["msg"]
        }
        else
        {
            <text>Your order was placed successfully!</text>
        }
    </div>

    <div class="btn-group d-flex justify-content-center gap-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-success">
            Continue Shopping
        </a>
        <a href="@Url.Action("history", "order")" class="btn btn-outline-success">
            View Orders
        </a>
    </div>
</div>